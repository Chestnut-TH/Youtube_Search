
<div class="row justify-content-center">
    <div id="form-area" class="col-md-8 col-md-offset-2">

        <div class="border p-3 text-center border-3">
            <h1>検索ページ</h1>
        </div>
        <div class="border p-3 text-center border-3">
            <%= form_with url: chanels_search_path, local: true, method: :get do |f| %>            
                <div class="row m-4">       
                    <div class="col-6">
                        <label class="form-label">条件1</label>
                        <%= f.select :tag1, @tags.map{|tag|[tag.name]}, {include_blank: "選択して下さい",required: true}, class: "form-control"%>
                    </div>
                    <div class="col-6">
                        <label class="form-label">条件2</label>
                        <%= f.select :tag2, @tags.map{|tag|[tag.name]}, {include_blank: "選択して下さい",required: true}, class: "form-control"%>
                    </div>
                </div>
                <div class="row m-4">       
                    <div class="col-6">
                        <label class="form-label">条件3</label>
                        <%= f.select :tag3, @tags.map{|tag|[tag.name]}, {include_blank: "選択して下さい",required: true}, class: "form-control"%>
                    </div>
                    <div class="col-6">
                        <label class="form-label">条件4</label>
                        <%= f.select :tag4, @tags.map{|tag|[tag.name]}, {include_blank: "選択して下さい",required: true}, class: "form-control"%>
                    </div>
                </div>   
                <div class="row m-4">       
                    <div class="col-6">
                        <label class="form-label">条件5</label>
                        <%= f.select :tag5, @tags.map{|tag|[tag.name]}, {include_blank: "選択して下さい",required: true}, class: "form-control"%>
                        <%= f.submit "検索", class: "btn btn-primary mt-3" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
 

