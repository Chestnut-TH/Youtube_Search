 
<div class="row justify-content-center">
    <div class="col-md-8 col-md-offset-2">
        <div class="border p-3 text-center border-3">
            <h1><%= yield(:title)%></h1>
        </div>
        
        <div class="border p-3 border-3">
            <%= form_with(model: @chanel, local: true) do |f| %>
                <%= render 'shared/error_messages' , object: f.object%>
                <div class="m-3">
                    <%= f.hidden_field :id , class: 'form-control', value: @chanel.id, readonly: true%>
                </div> 
                <div class="m-3">
                    <%= f.label :name ,"チャンネル名", class: "form-label"%>
                    <%= f.text_field :name , class: 'form-control', required: "required"%>
                </div>    
                <div class="m-3">
                    <%= f.label :url ,"チャンネルURL", class: "form-label"%>
                    <%= f.text_field :url , class: 'form-control', required: "required"%>
                </div>
                <div class="m-3">
                    <%= f.label :detail , class: "form-label"%>
                    <%= f.text_area :detail,class: "form-control",rows: "5" %>
                </div>

                <div class="m-3">
                    <%= f.label :tag1 ,"タグ1", class: "form-label"%>
                    <%= f.text_field :tag1 , class: 'form-control', required: "required"%>
                </div>
                <div class="m-3">
                    <%= f.label :tag2 ,"タグ2", class: "form-label"%>
                    <%= f.text_field :tag2 , class: 'form-control'%>
                </div>
                <div class="m-3">
                    <%= f.label :tag3 ,"タグ3", class: "form-label"%>
                    <%= f.text_field :tag3 , class: 'form-control'%>
                </div>
                <div class="m-3">
                    <%= f.label :tag4 ,"タグ4", class: "form-label"%>
                    <%= f.text_field :tag4 , class: 'form-control'%>
                </div>
                <div class="m-3">
                    <%= f.label :tag5 ,"タグ5", class: "form-label"%>
                    <%= f.text_field :tag5 , class: 'form-control'%>
                </div>         
                <div class="m-3">
                    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>